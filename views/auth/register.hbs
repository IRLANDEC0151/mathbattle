<div class="container">
  <div class="register">

  <div class="row justify-content-md-center " >
    <div class="col-xl-5 offset-xl-0 ">
      <div class="register-img">
        <img src="/register.svg" alt="register-img" />
      <p> Уже есть аккаунт?</p>

      </div>

      <div class="already-login">
        <form action="/auth/login" method="GET">
            <input type="hidden" name="_csrf" value="{{csrf}}" />

        <button>Войти</button>

        </form>
      </div>
    </div>
    <div class="col-xl-6 ">
      <div class="register-form">
        <div class="register-head">
          <p class="head-text">Учитесь, играйте, соревнуйтесь!</p>
        </div>
          <div class="error" style=" height: 4rem; margin-bottom: 1rem;">
                    {{#if registerError}}
                      <p class="errorLogin">{{registerError}}</p>
                        {{/if}}
                        {{#if completeRegister}}
                      <p class="completeRegister">{{completeRegister}}</p>
                    {{/if}}

          </div>
     
        <div class="register-body">
          <form action="/auth/register" class="register-form" method="POST">
            {{!-- input name --}}
            <div class="form-group">
              <input
                name="name"
                type="text"
                class="register-input"
                placeholder="имя"
                minlength="2"
                value='{{dataInput.name}}'
                required
              />
              <span >
                <img
                  src="/user.svg"
                  alt="register-img"
              /></span>
            </div>
            {{!-- input email --}}
            <div class="form-group">
             
              <input
                name="email"
                type="email"
                class="register-input"
                placeholder="email"
                value='{{dataInput.email}}'
                required
              />
               <span >
                <img
                  src="/mail.svg"
                  alt="register-img"
              /></span>
            </div>
            {{!-- input password --}}
            <div class="form-group">
             
              <input
                name="password"
                type="password"
                class="register-input"
                placeholder="пароль"
                required
              />
               <span >
                <img
                  src="/lock.svg"
                  alt="register-img"
              /></span>
            </div>
            {{!-- input confirm password --}}
            <div class="form-group">
              
              <input
                name="confirm"
                type="password"
                class="register-input"
                placeholder="повторить пароль"
                required
              />
              <span >
                <img
                  src="/lock.svg"
                  alt="register-img"
              /></span>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}" />
            <div class="register-button">
              <button type="submit" class="">Создать аккаунт</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
  </div>

