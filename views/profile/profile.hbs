<div class="container profile">
  <div class="row justify-content-around">
    <div class="col-xl-2 profile-info">
      <div class="profile-img">
        <img src="/newAvatar.svg" alt="аватар" />
      </div>
      <div class="profile-bio">
        <ul>
          <li>
            <span role="img"><img src="/user.svg" alt="" /></span>{{user.name}}
          </li>
          <li>
            <span role="img"><img src="/mail.svg" alt="" /></span>
            {{user.city}}
          </li>
          <li>
            <span role="img"><img src="/user.svg" alt="" /></span>
            {{user.school}}
          </li>
          <li>
            <span role="img"><img src="/user.svg" alt="" /></span>
            <p style="display: inline;">{{user.bio}}</p>
          </li>
        </ul>
      </div>
    </div>
    <div class="col-xl-9 profile-stat">
      <p class="profile-hello">Привет, <strong>{{user.name}}</strong></p>
      <div class="row">
        <div class="col-xl-9">
          <div class="profile-allMatchStat">
            <div class="profile-allStat">
              <img src="mail.svg" alt="" />
              <p class="all">1231</p>
              <p class="match">Матчей</p>
              <p class="today">Сегодня:<strong>123</strong></p>
            </div>

            <div class="profile-allStat">
              <img src="mail.svg" alt="" />
              <p class="all">9231</p>
              <p class="match">Примеров</p>
              <p class="today">Сегодня:<strong>635</strong></p>
            </div>
            <div class="profile-allStat">
              <img src="mail.svg" alt="" />
              <p class="all">7.3%</p>
              <p class="match">Ошибок</p>
              <p class="today">Сегодня:<strong>2.1%</strong></p>
            </div>
          </div>
          <div class="profile-modesStat">
            <table class="table">
              <thead>
                <p class="table-name">Статистика за все время</p>
                <tr>
                  <th scope="col">Режим</th>
                  <th scope="col">Матчей</th>
                  <th scope="col">Правильных</th>
                  <th scope="col">Ошибки</th>
                  <th scope="col">Ср. время на ответ</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="row">1</th>
                  <td>Otto</td>
                  <td>@mdo</td>
                  <td>@mdo</td>
                  <td>@mdo</td>
                </tr>
                <tr>
                  <th scope="row">2</th>
                  <td>Jacob</td>
                  <td>Thornton</td>
                  <td>@fat</td>
                  <td>@fat</td>
                </tr>
                <tr>
                  <th scope="row">3</th>
                  <td>Larry</td>
                  <td>the Bird</td>
                  <td>the Bird</td>
                  <td>@twitter</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div class="col-xl-3">
          <div class="profile-lastMatch">
            <p class="last">Последняя игра</p>
                <p class="mode">{{lastMatch.nameModes}}</p>
            <table class="lastMatchStat">
              </thead>
              <tbody>
                <tr>
                  <td class="key">Всего решено:</td>
                  <td class="value statAll" value="">{{lastMatch.allExample}}</td>
                </tr>
                <tr>
                  <td class="key">Правильных :</td>
                  <td class="value statRight">{{lastMatch.correctExample}} ({{lastMatch.percentageOfCorrectAnswers}}%)</td>
                </tr>
                <tr>
                  <td class="key"> Время на один пример:</td>
                  <td class="value statTime">{{lastMatch.timeMiddleExample}}</td> 
                </tr>
                <tr>
                </tr>
              </tbody>
            </table>
            <p class="details">Подробнее</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
